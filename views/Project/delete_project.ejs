<%- include header %> 

<style>
	.tab
	{
		padding-top: 120px;
	}
</style>

<div class="table-responsive container-fluid tab">
	<h1 class="text-center">View Projects</h1>
	<form action="/deleteproject" method="POST">

		<table class="table table-striped table-hover table-bordered table-condensed">
			<thead>
				<tr>
					<th>Project_Id</th>
					<th>Title</th>
					<th>Image</th>
					<th>Description</th>
					<th>Status</th>
					<th>View</th>
					<th>Update</th>
					<th>Delete</th>
					<th>Multiple_Delete</th>
				</tr>
			</thead>
			<tbody>
				<% for(var i = 0; i < data.length; i++) { %>
					<tr>
						<td> <%= data[i].project_id %> </td>
						<td> <%= data[i].project_title %> </td>
						<td> <%= data[i].project_img %> </td>
						<td> <%= data[i].project_description %> </td>
						<td> <%= data[i].project_status %> </td>
						
						<td> <a href="/view_pro_data/<%= data[i].project_id %>">View</a> </td>
						<td> <a href="/update_pro_data/<%= data[i].project_id %>">Update</a> </td>
						<td> <a href="/delete_pro_data/<%= data[i].project_id %>">Delete</a> </td>

						<td> <input type="checkbox" name="check" value="<%= data[i].project_id %>"> delete<%= data[i].project_id %> </td>
					</tr>
				<% } %>
			</tbody>
		</table><br>
		<input type="submit" name="submit" value="Delete Selected Project">
	</form>
</div>
</body>
</html>