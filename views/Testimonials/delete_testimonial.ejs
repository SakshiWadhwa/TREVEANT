<%- include header %> 

<style>
	.tab
	{
		padding-top: 120px;
	}
</style>

<div class="table-responsive container-fluid tab">
	<h1 class="text-center">View Category</h1>
	<form action="/deletetestimonial" method="POST">
		<table class="table table-striped table-hover table-bordered table-condensed">
			<thead>
				<tr>
					<th>Testimonial_Id</th>
					<th>Name</th>
					<th>Designation</th>
					<th>Review</th>
					<th>Image</th>
					<th>View</th>
					<th>Update</th>
					<th>Delete</th>
					<th>Multiple_Delete</th>
				</tr>
			</thead>
			<tbody>
				<% for(var i = 0; i < data.length; i++) { %>
					<tr>
						<td> <%= data[i].testimonial_id %> </td>
						<td> <%= data[i].testimonial_name %> </td>
						<td> <%= data[i].testimonial_designation %> </td>
						<td> <%= data[i].testimonial_review %> </td>
						<td> <%= data[i].testimonial_img %> </td>
						
						<td> <a href="/view_test_data/<%= data[i].testimonial_id %>">View</a> </td>
						<td> <a href="/update_test_data/<%= data[i].testimonial_id %>">Update</a> </td>
						<td> <a href="/delete_test_data/<%= data[i].testimonial_id %>">Delete</a> </td>

						<td> <input type="checkbox" name="check" value="<%= data[i].testimonial_id %>"> delete<%= data[i].testimonial_id %> </td>
					</tr>
				<% } %>
			</tbody>
		</table><br>
		<input type="submit" name="submit" value="Delete Selected Testimonial">
	</form>
</body>
</html>