<%- include header %> 
<style>
	.add_test
	{
		padding-top: 120px;
	}
</style>

	
	<div class="container add_test">
		<% if(typeof data != 'undefined'){ %>

			<form action="/update_testimonial/<%= data[0].testimonial_name %>" method="POST" enctype="multipart/form-data">

				<div class="form-group">
					<label for="Testimonial">Testimonial Name: </label>
					<input type="text" name="test_name" class="form-control" placeholder="Testimonial_name: " value="<%= data[0].testimonial_name %>">
				</div>

				<div class="form-group">
				  <label for="designation">Designation: </label>
				  <textarea class="form-control" rows="5" name="test_designation"></textarea>
				</div>	
				
				<div class="form-group">
					<label for="review">Review: </label>
					<input type="text" name="test_review" class="form-control" placeholder="Enter Your Review">
				</div>	

				<div class="form-group">
					<label for="img">Image Source: </label>
					<input type="file" name="test_img" class="form-control" placeholder="Image src">
				</div>
				<button type="submit" class="btn btn-default">Update</button>
			</form>
			
		<% } else { %>
			<form action="/addTestimonial" method="POST" enctype="multipart/form-data">

				<div class="form-group">
					<label for="Testimonial">Testimonial Name: </label>
					<input type="text" name="test_name" class="form-control" placeholder="Testimonial_name: ">
				</div>

				<div class="form-group">
				  <label for="designation">Designation: </label>
				  <input type="text" name="test_designation" class="form-control" placeholder="Enter Designation">
				</div>	
				
				<div class="form-group">
					<label for="review">Review: </label>
					<textarea class="form-control" rows="5" name="test_review"></textarea>
				</div>	

				<div class="form-group">
					<label for="img">Image Source: </label>
					<input type="file" name="test_img" class="form-control" placeholder="Image src">
				</div>
				<button type="submit" class="btn btn-primary">Submit</button>
			</form>
		<% } %>
	</div>
</body>
</html>