<%- include header %> 

<style>
	.tab
	{
		padding-top: 120px;
	}
</style>

<div class="table-responsive container-fluid tab">	
	<h1 class="text-center">View Gallery</h1>
	<form action="/deletegallery" method="POST">
		<table class="table table-striped table-hover table-bordered table-condensed">
				<thead>
					<tr>
						<th>Gallery_id</th>
						<th>Project_Id</th>
						<th>Title</th>
						<th>Image</th>
						<th>Description</th>
						<th>Status</th>
						<th>View</th>
						<th>Update</th>
						<th>Delete</th>
						<th>Multiple_Delete</th>
					</tr>
				</thead>
				<tbody>
					<% for(var i = 0; i < data.length; i++) { %>
						<tr>
							<td> <%= data[i].gallery_id %> </td>
							<td> <%= data[i].project_id %> </td>
							<td> <%= data[i].gallery_title %> </td>
							<td> <%= data[i].gallery_img %> </td>
							<td> <%= data[i].gallery_description %> </td>
							<td> <%= data[i].gallery_status %> </td>
							
							<td> <a href="/view_gal_data/<%= data[i].gallery_id %>">View</a> </td>
							<td> <a href="/update_gal_data/<%= data[i].gallery_id %>">Update</a> </td>
							<td> <a href="/delete_gal_data/<%= data[i].gallery_id %>">Delete</a> </td>

							<td> <input type="checkbox" name="check" value="<%= data[i].gallery_id %>"> delete<%= data[i].gallery_id %> </td>
						</tr>
					<% } %>
				</tbody>
		</table><br>
		<input type="submit" name="submit" value="Delete Selected Service">
	</form>
</body>
</html>