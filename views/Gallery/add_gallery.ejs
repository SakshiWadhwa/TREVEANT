<%- include header %> 
<style>
	.add_gal
	{
		padding-top: 120px;
	}
</style>

	<div class="container add_gal">
		<% if(typeof data != 'undefined'){ %>

			<form action="/update_gallery/<%= data[0].gallery_title %>" method="POST" enctype="multipart/form-data">

				<div class="form-group">
					<label for="Gallery">Gallery Title: </label>
					<input type="text" name="gal_title" class="form-control" placeholder="Gallery Title: " value="<%= data[0].gallery_title %>">
				</div>

				<div class="form-group">
					<label for="Image">Image Source: </label>
					<input type="file" name="gal_img" class="form-control" placeholder="Enter Image Source">
				</div>	
				
				<div class="form-group">
				  <label for="description">Description: </label>
				  <textarea class="form-control" rows="5" name="gal_description"></textarea>
				</div>			

				<div class="form-group">
					<label for="status">Status: </label>
					<select class="form-control" name="gal_status">
						<option class="active"><%= data[0].gallery_status %></option>
						<option>active</option>
						<option>block</option>
					</select>
				</div>
				<button type="submit" class="btn btn-default">Update</button>
			</form>
			
		<% } else { %>
			<form action="/addgallery" method="POST" enctype="multipart/form-data">

				<div class="form-group">
					<label for="Gallery">Project: </label>
					<select class="form-control" name="pro_title" >
						<option class="active">Select</option>
						<% for(var i = 0; i < x.length; i++) { %>
							<option value="<%= x[i].project_id %>"><%= x[i].project_title %></option>
						<% } %>
					</select>
				</div>

				<div class="form-group">
					<label for="Gallery">Gallery Title: </label>
					<input type="text" name="gal_title" class="form-control" placeholder="Gallery Title: ">
				</div>

				<div class="form-group">
					<label for="Image">Image Source: </label>
					<input type="file" name="gal_img" class="form-control" placeholder="Enter Image Source">
				</div>	
				
				<div class="form-group">
				  <label for="description">Description: </label>
				  <textarea class="form-control" rows="5" name="gal_description"></textarea>
				</div>			

				<div class="form-group">
					<label for="status">Status: </label>
					<select class="form-control" name="gal_status">
						<option class="active">Select</option>
						<option>active</option>
						<option>block</option>
					</select>
				</div>

				<button type="submit" class="btn btn-primary">Submit</button>
			</form>
		<% } %>
	</div>

</body>
</html>