<%- include header %> 
<style>
	.add_mem
	{
		padding-top: 120px;
	}
</style>

	
	<div class="container add_mem">
		<% if(typeof data != 'undefined'){ %>

			<form action="/update_membership/<%= data[0].membership_title %>" method="POST">

				<div class="form-group">
					<label for="Membership">Membership Title: </label>
					<input type="text" name="mem_title" class="form-control" placeholder="Membership_title: " value="<%= data[0].membership_title %>">
				</div>

				<div class="form-group">
				  <label for="description">Description: </label>
				  <textarea class="form-control" rows="5" name="mem_description"></textarea>
				</div>	
				
				<div class="form-group">
					<label for="price">Membership Price: </label>
					<input type="text" name="mem_price" class="form-control" placeholder="Enter Membership Price">
				</div>	

				<div class="form-group">
					<label for="status">Status: </label>
					<select class="form-control" name="mem_status">
						<option class="active"><%= data[0].status %></option>
						<option>active</option>
						<option>block</option>
					</select>
				</div>
				<button type="submit" class="btn btn-default">Update</button>
			</form>
			
		<% } else { %>
			<form action="/addMembership" method="POST">

				<div class="form-group">
					<label for="Membership">Membership Title: </label>
					<input type="text" name="mem_title" class="form-control" placeholder="Membership_title: ">
				</div>

				<div class="form-group">
				  <label for="description">Description: </label>
				  <textarea class="form-control" rows="5" name="mem_description"></textarea>
				</div>	
				
				<div class="form-group">
					<label for="price">Membership Price: </label>
					<input type="text" name="mem_price" class="form-control" placeholder="Enter Membership Price">
				</div>	

				<div class="form-group">
					<label for="status">Status: </label>
					<select class="form-control" name="mem_status">
						<option class="active">Select</option>
						<option>active</option>
						<option>block</option>
					</select>
				</div>
				<button type="submit" class="btn btn-primary">Submit</button>
			</form>
		<% } %>
	</div>
</body>
</html>