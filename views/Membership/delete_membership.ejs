<%- include header %> 

<style>
	.tab
	{
		padding-top: 120px;
	}
</style>

	<div class="table-responsive container-fluid tab">
		<h1 class="text-center">View Membership</h1>
		<form action="/deletemembership" method="POST">
			<table class="table table-striped table-hover table-bordered table-condensed">
				<thead>
					<tr>
						<th>Membership_Id</th>
						<th>Title</th>
						<th>Description</th>
						<th>Price</th>
						<th>Status</th>
						<th>View</th>
						<th>Update</th>
						<th>Delete</th>
						<th>Multiple_Delete</th>
					</tr>
				</thead>
				<tbody>
					<% for(var i = 0; i < data.length; i++) { %>
						<tr>
							<td> <%= data[i].membership_id %> </td>
							<td> <%= data[i].membership_title %> </td>
							<td> <%= data[i].membership_description %> </td>
							<td> <%= data[i].membership_price %> </td>
							<td> <%= data[i].membership_status %> </td>
							
							<td> <a href="/view_mem_data/<%= data[i].membership_id %>">View</a> </td>
							<td> <a href="/update_mem_data/<%= data[i].membership_id %>">Update</a> </td>
							<td> <a href="/delete_mem_data/<%= data[i].membership_id %>">Delete</a> </td>

							<td> <input type="checkbox" name="check" value="<%= data[i].membership_id %>"> delete<%= data[i].membership_id %> </td>
						</tr>
					<% } %>
				</tbody>
			</table><br>
			<input type="submit" name="submit" value="Delete Selected Membership">
		</form>
	</div>
</body>
</html>