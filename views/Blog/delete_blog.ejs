<%- include header %> 

<style>
	.tab
	{
		padding-top: 120px;
	}
</style>

<div class="table-responsive container-fluid tab">	
		<h1 class="text-center">View Blogs</h1>
		<form action="/deleteblog" method="POST">
			<table class="table table-striped table-hover table-bordered table-condensed">
				<thead>
					<tr>
						<th>Blog_Id</th>
						<th>Title</th>
						<th>Date</th>
						<th>Author</th>
						<th>Image</th>
						<th>Description</th>
						<th>Status</th>
						<th>View</th>
						<th>Update</th>
						<th>Delete</th>
						<th>Multiple_Delete</th>
					</tr>
				</thead>
				<tbody>
					<% for(var i = 0; i < data.length; i++) { %>
						<tr>
							<td> <%= data[i].blog_id %> </td>
				   			<td> <%= data[i].blog_title %> </td>			   			
				   			<td> <%= data[i].blog_date %> </td>
				   			<td> <%= data[i].blog_author %> </td>
				   			<td> <%= data[i].blog_img %> </td>
				   			<td> <%= data[i].blog_description %> </td>
				   			<td> <%= data[i].blog_status %> </td>
							
							<td> <a href="/view_blg_data/<%= data[i].blog_id %>">View</a> </td>
							<td> <a href="/update_blg_data/<%= data[i].blog_id %>">Update</a> </td>
							<td> <a href="/delete_blg_data/<%= data[i].blog_id %>">Delete</a> </td>

							<td> <input type="checkbox" name="check" value="<%= data[i].blog_id %>"> delete<%= data[i].blog_id %> </td>
						</tr>
					<% } %>
				</tbody>
			</table><br>
			<input type="submit" name="submit" value="Delete Selected Blog">
		</form>
</body>
</html>