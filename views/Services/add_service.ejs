<%- include header %> 
<style>
	.add_ser
	{
		padding-top: 120px;
	}
</style>

	<div class="container add_ser">
		<% if(typeof data != 'undefined'){ %>

			<form action="/update_service/<%= data[0].service_name %>" method="POST" enctype="multipart/form-data">

				<div class="form-group">
					<label for="Service">Service Name: </label>
					<input type="text" name="ser_name" class="form-control" placeholder="Service Name: " value="<%= data[0].service_name %>">
				</div>

				<div class="form-group">
					<label for="Image">Image Source: </label>
					<input type="file" name="ser_img" class="form-control" placeholder="Enter Image Source">
				</div>	
				
				<div class="form-group">
				  <label for="description">Description: </label>
				  <textarea class="form-control" rows="5" name="ser_description"></textarea>
				</div>			

				<div class="form-group">
					<label for="Booking">Booking amount: </label>
					<input type="number" name="book_amount" class="form-control" placeholder="Booking amount: ">
				</div>
				<button type="submit" class="btn btn-default">Update</button>
			</form>
			
		<% } else { %>
			<form action="/addService" method="POST" enctype="multipart/form-data">

					<div class="form-group">
						<label for="Category">Category: </label>
						<select class="form-control" name="cat_name" >
							<option class="active">Select</option>
							<% for(var i = 0; i < dat.length; i++) { %>
								<option value="<%= dat[i].category_id %>"><%= dat[i].category_name %></option>
							<% } %>
						</select>
					</div>

				<div class="form-group">
					<label for="Service">Service Name: </label>
					<input type="text" name="ser_name" class="form-control" placeholder="Service Name: ">
				</div>

				<div class="form-group">
					<label for="Image">Image Source: </label>
					<input type="file" name="ser_img" class="form-control" placeholder="Enter Image Source">
				</div>	
				
				<div class="form-group">
				  <label for="description">Description: </label>
				  <textarea class="form-control" rows="5" name="ser_description"></textarea>
				</div>			

				<div class="form-group">
					<label for="Booking">Booking amount: </label>
					<input type="number" name="book_amount" class="form-control" placeholder="Booking amount: ">
				</div>

				<button type="submit" class="btn btn-primary">Submit</button>
			</form>
		<% } %>
	</div>

</body>
</html>