<%- include header %> 
<style>
	.tab
	{
		padding-top: 120px;
	}
</style>

<div class="table-responsive container tab">
		<h1 class="text-center"><%= data[0].service_name %></h1>
		<table class="table table-striped table-hover table-bordered table-condensed">

			<thead>
				<tr>
					<th>Service_Id</th>
					<th>Category_Id</th>
					<th>Name</th>
					<th>Image</th>
					<th>Description</th>
					<th>Booking Amount</th>
				</tr>
			</thead>
		      
		    <tbody>
				<% for(var i = 0; i < data.length; i++) { %>
				   		<tr>
				   			<td> <%= data[i].service_id %></td>
				   			<td> <%= data[i].category_id %></td>
				   			<td> <%= data[i].service_name %> </td>
				   			<td> <%= data[i].service_img %> </td>
				   			<td> <%= data[i].service_description %> </td>
				   			<td> <%= data[i].book_amount %> </td>
				   		</tr>
				<% } %>
			</tbody>
		</table>
	</div>
</body>
</html>