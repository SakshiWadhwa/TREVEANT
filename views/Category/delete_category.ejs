<%- include header %> 

<style>
	.tab
	{
		padding-top: 120px;
	}
</style>

	<div class="table-responsive container-fluid tab">	
		<h1 class="text-center">View Category</h1>
		<form action="/deletecategory" method="POST">
			<table class="table table-striped table-hover table-bordered table-condensed">
				<thead>
					<tr>
						<th>Category_Id</th>
						<th>Name</th>
						<th>Icon</th>
						<th>Image</th>
						<th>Description</th>
						<th>Status</th>
						<th>View</th>
						<th>Update</th>
						<th>Delete</th>
						<th>Multiple_Delete</th>
					</tr>
				</thead>
				<tbody>
					<% for(var i = 0; i < data.length; i++) { %>
						<tr>
							<td> <%= data[i].category_id %> </td>
							<td> <%= data[i].category_name %> </td>
							<td> <%= data[i].category_icon %> </td>
							<td> <%= data[i].category_img %> </td>
							<td> <%= data[i].category_description %> </td>
							<td> <%= data[i].category_status %> </td>
							
							<td> <a href="/view_cat_data/<%= data[i].category_id %>">View</a> </td>
							<td> <a href="/update_cat_data/<%= data[i].category_id %>">Update</a> </td>
							<td> <a href="/delete_cat_data/<%= data[i].category_id %>">Delete</a> </td>

							<td> <input type="checkbox" name="check" value="<%= data[i].category_id %>"> delete<%= data[i].category_id %> </td>
						</tr>
					<% } %>
				</tbody>
			</table><br>
			<input type="submit" name="submit" value="Delete Selected Category">
		</form>
	</div>
</body>
</html>