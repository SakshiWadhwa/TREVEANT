<%- include header %> 
<style>
	.tab
	{
		padding-top: 120px;
	}
</style>

	<div class="table-responsive container tab">
		<h1 class="text-center"><%= data[0].category_name %></h1>
		<table class="table table-striped table-hover table-bordered table-condensed">

			<thead>
				<tr>
					<th>Category_Id</th>
					<th>Name</th>
					<th>Icon</th>
					<th>Image</th>
					<th>Description</th>
					<th>Status</th>
				</tr>
			</thead>
		      
		    <tbody>

		    	<% for(var i = 0; i < data.length; i++) { %>
			   		<tr>
			   			<td> <%= data[i].category_id %> </td>
			   			<td> <%= data[i].category_name %> </td>
			   			<td> <%= data[i].category_icon %> </td>
			   			<td> <%= data[i].category_img %> </td>
			   			<td> <%= data[i].category_description %> </td>
			   			<td> <%= data[i].category_status %> </td>
			   		</tr>
				<% } %>
		    </tbody>
			
		</table>
	</div>
</body>
</html>