<%- include header %> 
<style>
	.add_sub
	{
		padding-top: 120px;
	}
</style>

	
	<div class="container add_sub">
		<% if(typeof data != 'undefined'){ %>

			<form action="/update_sub/<%= data[0].subscribe_name %>" method="POST">

				<div class="form-group">
					<label for="Subscribe"> Name: </label>
					<input type="text" name="sub_name" class="form-control" placeholder="Name: " value="<%= data[0].subscribe_name %>">
				</div>
				
				<div class="form-group">
					<label for="date">Email: </label>
					<input type="text" name="sub_email" class="form-control" placeholder="Enter Email">
				</div>		

				<div class="form-group">
					<label for="status">Status: </label>
					<select class="form-control" name="sub_status">
						<option class="active"><%= data[0].subscribe_status %></option>
						<option>active</option>
						<option>block</option>
					</select>
				</div>
				<button type="submit" class="btn btn-default">Update</button>
			</form>
			
		<% } else { %>
			<form action="/addSubscribe" method="POST">

				<div class="form-group">
					<label for="Subscribe"> Name: </label>
					<input type="text" name="sub_name" class="form-control" placeholder="Name: ">
				</div>
				
				<div class="form-group">
					<label for="date">Email: </label>
					<input type="text" name="sub_email" class="form-control" placeholder="Enter Email">
				</div>		

				<div class="form-group">
					<label for="status">Status: </label>
					<select class="form-control" name="sub_status">
						<option class="active">Select</option>
						<option>active</option>
						<option>block</option>
					</select>
				</div>
				<button type="submit" class="btn btn-primary">Submit</button>
			</form>
		<% } %>
	</div>
</body>
</html>