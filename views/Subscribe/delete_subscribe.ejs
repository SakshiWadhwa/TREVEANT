<%- include header %> 

<style>
	.tab
	{
		padding-top: 120px;
	}
</style>

<div class="table-responsive container-fluid tab">	
	<h1 class="text-center">View Subscription</h1>
	<form action="/deletesubscribe" method="POST">
		<table class="table table-striped table-hover table-bordered table-condensed">
				<thead>
					<tr>
						<th>Subscribe_Id</th>
						<th>Name</th>
						<th>Email</th>
						<th>Status</th>
						<th>View</th>
						<th>Update</th>
						<th>Delete</th>
						<th>Multiple_Delete</th>
					</tr>
				</thead>
				<tbody>
					<% for(var i = 0; i < data.length; i++) { %>
						<tr>
							<td> <%= data[i].subscribe_id %> </td>
				   			<td> <%= data[i].subscribe_name %> </td>
				   			<td> <%= data[i].subscribe_email %> </td>
				   			<td> <%= data[i].subscribe_status %> </td>
							
							<td> <a href="/view_sub_data/<%= data[i].subscribe_id %>">View</a> </td>
							<td> <a href="/update_sub_data/<%= data[i].subscribe_id %>">Update</a> </td>
							<td> <a href="/delete_sub_data/<%= data[i].subscribe_id %>">Delete</a> </td>

							<td> <input type="checkbox" name="check" value="<%= data[i].subscribe_id %>"> delete<%= data[i].subscribe_id %> </td>
						</tr>
					<% } %>
				</tbody>
		</table><br>
		<input type="submit" name="submit" value="Delete Selected Subscription">
	</form>
</body>
</html>